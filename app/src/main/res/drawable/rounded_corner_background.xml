<!-- File: rounded_corner_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Culoarea umpluturii (background color) -->
    <solid android:color="#FFFFFF"/> <!-- Culorea fundalului, în acest caz alb -->

    <!-- Colțurile rotunjite -->
    <corners android:radius="8dp"/> <!-- Raza colțurilor rotunjite, în acest caz 8dp -->

    <!-- Umbră -->
    <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/> <!-- Padding pentru umbră -->

    <stroke
        android:width="1dp"
    android:color="#CCCCCC"
    />

</shape>
